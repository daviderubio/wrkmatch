{
  "name": "wrkmatch",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "pip install -U pip && pip install -r requirements.txt",
  "forwardPorts": [8501],
  "portsAttributes": {
    "8501": { "label": "Streamlit" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}